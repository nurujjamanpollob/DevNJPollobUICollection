<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="300dp"
    android:id="@+id/dialog_main_root_view"
    android:background="@color/white_dev_njpollob"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dialog_imageview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="10dp"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialog_imageview"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/inder"
            android:textColor="@color/black_dev_njpollob"
            android:textSize="18sp" />

    </ScrollView>

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/dialog_button_placeholder_view"
        android:background="@color/white_dev_njpollob"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_yes"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black_dev_njpollob"
            android:fontFamily="@font/inder"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_no"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inder"
            android:background="@android:color/transparent"
            android:textColor="@color/black_dev_njpollob"
            android:textStyle="bold" />


    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>


